{{ 'customer.css' | asset_url | stylesheet_tag }}

<div class="customer-addresses">
  <div class="page-width">
    <div class="customer-addresses__header">
      <h1 class="customer-addresses__title">Addresses</h1>
      <div class="customer-addresses__actions">
        <a href="{{ routes.account_url }}" class="btn btn--outline">‚Üê Back to Account</a>
        <button onclick="showAddAddressForm()" class="btn btn--primary">Add New Address</button>
      </div>
    </div>

    {% if customer.addresses.size > 0 %}
      <div class="addresses-grid">
        {% for address in customer.addresses %}
          <div class="address-card {% if address == customer.default_address %}address-card--default{% endif %}">
            {% if address == customer.default_address %}
              <div class="address-card__badge">Default</div>
            {% endif %}
            
            <div class="address-card__content">
              <h3 class="address-card__name">{{ address.first_name }} {{ address.last_name }}</h3>
              <div class="address-card__details">
                <p>{{ address.address1 }}</p>
                {% if address.address2 != blank %}
                  <p>{{ address.address2 }}</p>
                {% endif %}
                <p>{{ address.city }}, {{ address.province }} {{ address.zip }}</p>
                <p>{{ address.country }}</p>
                {% if address.phone != blank %}
                  <p>{{ address.phone }}</p>
                {% endif %}
              </div>
            </div>
            
            <div class="address-card__actions">
              <button onclick="editAddress({{ address.id }})" class="btn btn--small btn--outline">Edit</button>
              {% unless address == customer.default_address %}
                <button onclick="deleteAddress({{ address.id }})" class="btn btn--small btn--outline btn--danger">Delete</button>
              {% endunless %}
              {% unless address == customer.default_address %}
                <form action="{{ routes.account_addresses_url }}/{{ address.id }}/default" method="post" style="display: inline;">
                  <button type="submit" class="btn btn--small btn--primary">Set as Default</button>
                </form>
              {% endunless %}
            </div>
          </div>
        {% endfor %}
      </div>
    {% else %}
      <div class="empty-state">
        <h2>No addresses saved</h2>
        <p>Add an address to make checkout faster and easier.</p>
        <button onclick="showAddAddressForm()" class="btn btn--primary">Add Your First Address</button>
      </div>
    {% endif %}
  </div>
</div>

<!-- Add/Edit Address Modal -->
<div id="address-modal" class="modal" style="display: none;">
  <div class="modal__content">
    <div class="modal__header">
      <h2 id="modal-title">Add New Address</h2>
      <button onclick="hideAddressModal()" class="modal__close">&times;</button>
    </div>
    
    <form id="address-form" method="post" class="address-form">
      <div class="address-form__grid">
        <div class="field">
          <input type="text" name="address[first_name]" id="AddressFirstName" class="field__input" placeholder=" " required>
          <label class="field__label" for="AddressFirstName">First Name</label>
        </div>
        
        <div class="field">
          <input type="text" name="address[last_name]" id="AddressLastName" class="field__input" placeholder=" " required>
          <label class="field__label" for="AddressLastName">Last Name</label>
        </div>
      </div>
      
      <div class="field">
        <input type="text" name="address[company]" id="AddressCompany" class="field__input" placeholder=" ">
        <label class="field__label" for="AddressCompany">Company (Optional)</label>
      </div>
      
      <div class="field">
        <input type="text" name="address[address1]" id="AddressAddress1" class="field__input" placeholder=" " required>
        <label class="field__label" for="AddressAddress1">Address</label>
      </div>
      
      <div class="field">
        <input type="text" name="address[address2]" id="AddressAddress2" class="field__input" placeholder=" ">
        <label class="field__label" for="AddressAddress2">Apartment, suite, etc. (Optional)</label>
      </div>
      
      <div class="address-form__grid">
        <div class="field">
          <input type="text" name="address[city]" id="AddressCity" class="field__input" placeholder=" " required>
          <label class="field__label" for="AddressCity">City</label>
        </div>
        
        <div class="field">
          <select name="address[country]" id="AddressCountry" class="field__input" required>
            <option value="">Select Country</option>
            {{ all_country_option_tags }}
          </select>
        </div>
      </div>
      
      <div class="address-form__grid">
        <div class="field">
          <select name="address[province]" id="AddressProvince" class="field__input">
            <option value="">Select Province/State</option>
          </select>
        </div>
        
        <div class="field">
          <input type="text" name="address[zip]" id="AddressZip" class="field__input" placeholder=" " required>
          <label class="field__label" for="AddressZip">Postal/Zip Code</label>
        </div>
      </div>
      
      <div class="field">
        <input type="tel" name="address[phone]" id="AddressPhone" class="field__input" placeholder=" ">
        <label class="field__label" for="AddressPhone">Phone (Optional)</label>
      </div>
      
      <div class="address-form__actions">
        <button type="submit" class="btn btn--primary">Save Address</button>
        <button type="button" onclick="hideAddressModal()" class="btn btn--outline">Cancel</button>
      </div>
    </form>
  </div>
</div>

<style>
.customer-addresses {
  padding: 2rem 0;
  min-height: 100vh;
}

.customer-addresses__header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 3rem;
  padding-bottom: 2rem;
  border-bottom: 2px solid var(--light-gray);
}

.customer-addresses__title {
  font-family: 'Bebas Neue', cursive;
  font-size: 3rem;
  font-weight: 400;
  color: var(--matte-black);
  letter-spacing: 2px;
  text-transform: uppercase;
  margin: 0;
}

.customer-addresses__actions {
  display: flex;
  gap: 1rem;
}

.addresses-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
  gap: 2rem;
}

.address-card {
  background: white;
  border-radius: 12px;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
  overflow: hidden;
  position: relative;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.address-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 8px 30px rgba(0, 0, 0, 0.12);
}

.address-card--default {
  border: 2px solid var(--primary-red);
}

.address-card__badge {
  position: absolute;
  top: 1rem;
  right: 1rem;
  background: var(--primary-red);
  color: white;
  padding: 0.25rem 0.75rem;
  border-radius: 20px;
  font-size: 0.8rem;
  font-weight: 600;
  text-transform: uppercase;
}

.address-card__content {
  padding: 2rem;
}

.address-card__name {
  font-size: 1.2rem;
  font-weight: 600;
  color: var(--matte-black);
  margin: 0 0 1rem 0;
}

.address-card__details p {
  margin: 0 0 0.5rem 0;
  color: var(--dark-gray);
  line-height: 1.4;
}

.address-card__actions {
  display: flex;
  gap: 0.5rem;
  padding: 1.5rem 2rem;
  border-top: 1px solid var(--light-gray);
  flex-wrap: wrap;
}

.btn--danger {
  color: #dc2626;
  border-color: #dc2626;
}

.btn--danger:hover {
  background: #dc2626;
  color: white;
}

.modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  z-index: 2000;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 2rem;
}

.modal__content {
  background: white;
  border-radius: 12px;
  max-width: 600px;
  width: 100%;
  max-height: 90vh;
  overflow-y: auto;
}

.modal__header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 2rem 2rem 1rem;
  border-bottom: 1px solid var(--light-gray);
}

.modal__header h2 {
  font-family: 'Bebas Neue', cursive;
  font-size: 1.8rem;
  font-weight: 400;
  color: var(--matte-black);
  letter-spacing: 1px;
  text-transform: uppercase;
  margin: 0;
}

.modal__close {
  background: none;
  border: none;
  font-size: 2rem;
  color: var(--dark-gray);
  cursor: pointer;
  padding: 0;
  width: 2rem;
  height: 2rem;
  display: flex;
  align-items: center;
  justify-content: center;
}

.address-form {
  padding: 2rem;
}

.address-form__grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 1rem;
  margin-bottom: 1.5rem;
}

.address-form__actions {
  display: flex;
  gap: 1rem;
  margin-top: 2rem;
}

@media screen and (max-width: 750px) {
  .customer-addresses__header {
    flex-direction: column;
    align-items: flex-start;
    gap: 1rem;
  }
  
  .customer-addresses__title {
    font-size: 2.5rem;
  }
  
  .customer-addresses__actions {
    flex-direction: column;
    width: 100%;
  }
  
  .addresses-grid {
    grid-template-columns: 1fr;
  }
  
  .address-card__actions {
    flex-direction: column;
  }
  
  .address-form__grid {
    grid-template-columns: 1fr;
  }
  
  .address-form__actions {
    flex-direction: column;
  }
  
  .modal {
    padding: 1rem;
  }
}
</style>

<script>
function showAddAddressForm() {
  document.getElementById('modal-title').textContent = 'Add New Address';
  document.getElementById('address-form').action = '{{ routes.account_addresses_url }}';
  document.getElementById('address-modal').style.display = 'flex';
  document.body.style.overflow = 'hidden';
}

function editAddress(addressId) {
  document.getElementById('modal-title').textContent = 'Edit Address';
  document.getElementById('address-form').action = `{{ routes.account_addresses_url }}/${addressId}`;
  document.getElementById('address-modal').style.display = 'flex';
  document.body.style.overflow = 'hidden';
  
  // You would populate the form with existing address data here
}

function hideAddressModal() {
  document.getElementById('address-modal').style.display = 'none';
  document.body.style.overflow = '';
  document.getElementById('address-form').reset();
}

function deleteAddress(addressId) {
  if (confirm('Are you sure you want to delete this address?')) {
    const form = document.createElement('form');
    form.method = 'post';
    form.action = `{{ routes.account_addresses_url }}/${addressId}`;
    
    const methodInput = document.createElement('input');
    methodInput.type = 'hidden';
    methodInput.name = '_method';
    methodInput.value = 'delete';
    form.appendChild(methodInput);
    
    document.body.appendChild(form);
    form.submit();
  }
}

// Handle country/province selection
document.addEventListener('DOMContentLoaded', function() {
  const countrySelect = document.getElementById('AddressCountry');
  const provinceSelect = document.getElementById('AddressProvince');
  
  if (countrySelect && provinceSelect) {
    countrySelect.addEventListener('change', function() {
      // Update provinces based on selected country
      // This would typically use Shopify's country/province data
      provinceSelect.innerHTML = '<option value="">Select Province/State</option>';
    });
  }
});
</script>