{{ 'customer.css' | asset_url | stylesheet_tag }}

<div class="customer-orders">
  <div class="page-width">
    <div class="customer-orders__header">
      <h1 class="customer-orders__title">Order History</h1>
      <a href="{{ routes.account_url }}" class="btn btn--outline">← Back to Account</a>
    </div>

    {% if customer.orders.size > 0 %}
      <div class="orders-list">
        {% paginate customer.orders by 10 %}
          {% for order in customer.orders %}
            <div class="order-card">
              <div class="order-card__header">
                <div class="order-card__info">
                  <h2 class="order-card__number">Order {{ order.name }}</h2>
                  <p class="order-card__date">{{ order.created_at | date: "%B %d, %Y at %I:%M %p" }}</p>
                </div>
                <div class="order-card__status">
                  <span class="order-status order-status--{{ order.fulfillment_status }}">
                    {{ order.fulfillment_status | default: 'unfulfilled' | capitalize }}
                  </span>
                  <span class="order-card__total">{{ order.total_price | money }}</span>
                </div>
              </div>
              
              <div class="order-card__items">
                {% for line_item in order.line_items %}
                  <div class="order-item">
                    <div class="order-item__image">
                      {% if line_item.image %}
                        <img src="{{ line_item.image | img_url: '100x100' }}" alt="{{ line_item.title }}" loading="lazy">
                      {% endif %}
                    </div>
                    <div class="order-item__details">
                      <h3 class="order-item__title">{{ line_item.title }}</h3>
                      {% if line_item.variant.title != 'Default Title' %}
                        <p class="order-item__variant">{{ line_item.variant.title }}</p>
                      {% endif %}
                      <p class="order-item__quantity">Qty: {{ line_item.quantity }}</p>
                    </div>
                    <div class="order-item__price">
                      {{ line_item.final_price | money }}
                    </div>
                  </div>
                {% endfor %}
              </div>
              
              <div class="order-card__actions">
                <a href="{{ order.customer_url }}" class="btn btn--outline">View Details</a>
                {% if order.fulfillment_status == 'fulfilled' %}
                  <button onclick="reorderItems({{ order.id }})" class="btn btn--primary">Reorder</button>
                {% endif %}
              </div>
            </div>
          {% endfor %}
          
          {% if paginate.pages > 1 %}
            <nav class="pagination" role="navigation" aria-label="Pagination">
              {% if paginate.previous %}
                <a href="{{ paginate.previous.url }}" class="pagination__item pagination__item--prev">
                  ← Previous
                </a>
              {% endif %}
              
              {% for part in paginate.parts %}
                {% if part.is_link %}
                  <a href="{{ part.url }}" class="pagination__item">{{ part.title }}</a>
                {% else %}
                  {% if part.title == paginate.current_page %}
                    <span class="pagination__item pagination__item--current">{{ part.title }}</span>
                  {% else %}
                    <span class="pagination__item">{{ part.title }}</span>
                  {% endif %}
                {% endif %}
              {% endfor %}
              
              {% if paginate.next %}
                <a href="{{ paginate.next.url }}" class="pagination__item pagination__item--next">
                  Next →
                </a>
              {% endif %}
            </nav>
          {% endif %}
        {% endpaginate %}
      </div>
    {% else %}
      <div class="empty-state">
        <h2>No orders yet</h2>
        <p>You haven't placed any orders yet. Start shopping to see your order history here.</p>
        <a href="{{ routes.all_products_collection_url }}" class="btn btn--primary">Start Shopping</a>
      </div>
    {% endif %}
  </div>
</div>

<style>
.customer-orders {
  padding: 2rem 0;
  min-height: 100vh;
}

.customer-orders__header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 3rem;
  padding-bottom: 2rem;
  border-bottom: 2px solid var(--light-gray);
}

.customer-orders__title {
  font-family: 'Bebas Neue', cursive;
  font-size: 3rem;
  font-weight: 400;
  color: var(--matte-black);
  letter-spacing: 2px;
  text-transform: uppercase;
  margin: 0;
}

.orders-list {
  display: flex;
  flex-direction: column;
  gap: 2rem;
}

.order-card {
  background: white;
  border-radius: 12px;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
  overflow: hidden;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.order-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 8px 30px rgba(0, 0, 0, 0.12);
}

.order-card__header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  padding: 2rem;
  border-bottom: 1px solid var(--light-gray);
}

.order-card__number {
  font-size: 1.3rem;
  font-weight: 600;
  color: var(--matte-black);
  margin: 0 0 0.5rem 0;
}

.order-card__date {
  color: var(--dark-gray);
  margin: 0;
}

.order-card__status {
  text-align: right;
}

.order-status {
  display: inline-block;
  padding: 0.5rem 1rem;
  border-radius: 25px;
  font-size: 0.8rem;
  font-weight: 600;
  text-transform: uppercase;
  margin-bottom: 0.5rem;
}

.order-status--fulfilled {
  background: #d1fae5;
  color: #065f46;
}

.order-status--unfulfilled {
  background: #fef3c7;
  color: #92400e;
}

.order-status--partial {
  background: #dbeafe;
  color: #1e40af;
}

.order-card__total {
  display: block;
  font-size: 1.3rem;
  font-weight: 700;
  color: var(--primary-red);
}

.order-card__items {
  padding: 2rem;
}

.order-item {
  display: flex;
  align-items: center;
  gap: 1rem;
  padding: 1rem 0;
  border-bottom: 1px solid #f0f0f0;
}

.order-item:last-child {
  border-bottom: none;
}

.order-item__image {
  width: 60px;
  height: 60px;
  border-radius: 8px;
  overflow: hidden;
  flex-shrink: 0;
}

.order-item__image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.order-item__details {
  flex: 1;
}

.order-item__title {
  font-size: 1rem;
  font-weight: 600;
  color: var(--matte-black);
  margin: 0 0 0.25rem 0;
}

.order-item__variant,
.order-item__quantity {
  font-size: 0.9rem;
  color: var(--dark-gray);
  margin: 0;
}

.order-item__price {
  font-size: 1.1rem;
  font-weight: 700;
  color: var(--primary-red);
}

.order-card__actions {
  display: flex;
  gap: 1rem;
  padding: 2rem;
  border-top: 1px solid var(--light-gray);
}

.pagination {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 0.5rem;
  margin-top: 3rem;
}

.pagination__item {
  padding: 0.75rem 1rem;
  border: 1px solid #ddd;
  border-radius: 8px;
  text-decoration: none;
  color: var(--matte-black);
  transition: all 0.3s ease;
}

.pagination__item:hover {
  border-color: var(--primary-red);
  color: var(--primary-red);
}

.pagination__item--current {
  background: var(--primary-red);
  color: white;
  border-color: var(--primary-red);
}

@media screen and (max-width: 750px) {
  .customer-orders__header {
    flex-direction: column;
    align-items: flex-start;
    gap: 1rem;
  }
  
  .customer-orders__title {
    font-size: 2.5rem;
  }
  
  .order-card__header {
    flex-direction: column;
    gap: 1rem;
  }
  
  .order-card__status {
    text-align: left;
  }
  
  .order-item {
    flex-direction: column;
    align-items: flex-start;
    text-align: left;
  }
  
  .order-card__actions {
    flex-direction: column;
  }
}
</style>

